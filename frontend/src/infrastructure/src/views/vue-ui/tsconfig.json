{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": false,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      // "@/*":[
      //   "./src/*"
      // ],
      // // "forms-app-domain/*": [
      // //   "../../../../domain/*"
      // // ],
      // "@forms-app-infrastructure/*": [
      //   "../../../../../infrastructure/*"
      // ],
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "../../../../domain/**/*.ts",
    "../../../../../infrastructure/**/*.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
